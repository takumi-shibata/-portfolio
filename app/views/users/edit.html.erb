<div class="container">
	<div class="row">
		<h3>編集内容を入力してください</h3>

		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<%= form_for(@user) do |f| %>
			  <div class="edit-field">
			  	 <table class="edit-table">
			  	   <tr>
			  	 	 <th><%= f.label :名前（ニックネーム可）%></th>
			  	 	 <td><%= f.text_field :name %></td>
			  	   </tr>

                   <tr>
			  	 	 <th><%= f.label :自己紹介文 %></th>
			  	 	 <td><%= f.text_field :introduction, :size => "50*50" %></td>
			  	   </tr>

			  	   <tr>
			  	   	 <th><%= f.label :画像 %></th>
			  	   	 <td><%= f.attachment_field :profile_image %></td>
			  	   </tr>
			  	 </table>
			  </div>

			  <div class="actions">
			  	 <button class="btn btn-primary btn-block" type="submit">更新する</button>
			  </div>
			<% end %>

			<div class="col-xs-4"></div>
			<div class="col-xs-8">
			  <%= link_to "マイページに戻る＝＞", user_path(@user.id) %>
			</div>
		</div>
	</div>
</div>