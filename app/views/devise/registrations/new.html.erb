<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <table>
          <tr>
            <th><%= f.label :名前（ニックネーム可） %></th>
            <td><%= f.text_field :name %></td>
          </tr>

          <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <th><%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
            </th>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
           <th><%= f.label :パスワード（確認用） %></th>
           <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          <tr>
        </table>
      </div>

      <div class="actions">
        <button class="btn btn-success btn-lg" type="submit">新規登録</button>
      </div>
    <% end %>

    <h2>既に登録済みの方</h2>
    <%= link_to 'こちら', new_user_session_path %>からログインして下さい
  </div>
</div>