<div class="container">
  <div class="row">
  	  <div class="col-xs-4"></div>
  	  <div class="col-xs-4">

		  <h2 class="password-title">パスワードをお忘れの方</h2>

		  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= render "devise/shared/error_messages", resource: resource %>

			  <div class="password-field">
				  	<table class="password-table">
				  		<tr>
						 <th class="col-xs-6"><%= f.label :メールアドレス %></th>
						 <td class="col-xs-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
						</tr>
					</table>
			  </div>

			  <div class="actions">
			     <button class="btn btn-danger btn-block" type="submit">送信</button>
			  </div>

              <div class="col-xs-3"></div>
              <div class="col-xs-9">
			     <%= link_to '=>ログインページに戻る', new_user_session_path %><br>
			     <%= link_to '=>会員登録ページに戻る', new_user_registration_path %>
			  </div>
		  <% end %>
	  </div>
  </div>
</div>